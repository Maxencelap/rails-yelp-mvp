<h1>YOUR NEW RESTAURANT</h1>

<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :category %>
  <%= f.text_field :category,  :collection =>  ["chinese", "italian", "japanese", "french", "belgian"]%>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <%= f.submit %>
<% end %>


<%= link_to "Go Back", restaurants_path, class: "btn btn-danger" %>
